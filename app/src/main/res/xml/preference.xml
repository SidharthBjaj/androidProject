<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Font Size" />

    <ListPreference android:title="Text Size"
        android:summary="Please select the font size"
        android:key="size"
        android:defaultValue="20"
        android:entries="@array/font_sizes"
        android:entryValues="@array/font_sizes"/>

    <PreferenceCategory
        android:title="Font Style" />
    <ListPreference android:title="Text Style"
        android:summary="Please select the font style"
        android:key="style"
        android:defaultValue="Sans-serif"
        android:entries="@array/font_style"
        android:entryValues="@array/font_sizes"/>


</PreferenceScreen>